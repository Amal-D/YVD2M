<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="3"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_weight="1.2">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <me.amald.youtubedownloader.Util.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/album_cover"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:elevation="5dp"
            android:src="@drawable/album_art18"
            />
    <TextView
        android:id="@+id/play_c_titile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/album_cover"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="shape of your body"/>




</RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_weight="1.8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/previous"
                android:layout_toLeftOf="@+id/play_c"
                android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/play_c"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/play"/>


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/next"
                android:layout_toRightOf="@+id/play_c"
                android:layout_marginLeft="10dp"/>

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>